<h3>snippets</h3>

<table class='table'>
  <tr>
    <th>名字</th>
    <th>描述</th>
    <th>类型</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snippets.each do |snippet| %>
  <tr>
    <td><%= snippet.name %></td>
    <td><%= snippet.description %></td>
    <td><%= snippet.stype %></td>
    <td><%= link_to 'Show', snippet %></td>
    <td> 
      <% if snippet.stype != 'system' %> 
        <%= link_to 'Edit', edit_snippet_path(snippet) %> 
      <% end %>
    </td>
    <td> 
      <% if snippet.stype != 'system' %> 
        <%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Snippet', new_snippet_path %>
