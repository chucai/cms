<div class="row">
  <div class="col-md-8">
    <%= form_tag(admin_images_path, :method => :get) do %>
    <div class="input-group">
    <input type="text" class='form-control' name='keyword'>
    <span class="input-group-btn">
      <button class="btn btn-default" type="button">Search!</button>
    </span>
    </div>
  <% end -%>
  </div>
  <div class="col-md-4">
    <%=link_to '增加图片', new_admin_image_path, :class => 'btn btn-primary pull-right' %>
  </div>
</div>

<hr>

<div class="row">
  <% @images.each do |image| %>
    <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag image.upfile.url, :height => 300 %>
      <div class="caption">
        <h3><%=image.title  %></h3>
        <p class='word-break'><%=image_url image.upfile.url %></p>
        <p>
        <a href="#" class="btn btn-primary" role="button">Show</a> 
        <%=link_to 'Delete', admin_image_path(image), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
        </p>
      </div>
    </div>
  </div>
<% end -%>
</div>
